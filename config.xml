<?xml version='1.0' encoding='utf-8'?>
<widget xmlns:gap = "http://phonegap.com/ns/1.0" id="com.pocketfiction.ryztools" version="1.3.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" versionCode = "10">
    <name>Ryztools</name>
    <description>
        Ryztools - A collection of tools for the Ryzom MMORPG.
    </description>
    <author email="fstltna@ryzomcity.org" href="http://ryzomcity.org">
        Marisa Giancarla (MarisaG)
    </author>
    <access origin="*" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <icon src="icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icon_at_2x.png" gap:platform="ios" width="114" height="114" />
    <icon src="icon-72_at_2x.png" gap:platform="ios" width="144" height="144" />
    <!-- Loading Page Images -->
    <gap:splash src="iPhone3Loading.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="iPhone4Loading.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="iPhone5Loading.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="LargeLandLoading.png" gap:platform="ios" width="1024" height="748" />
    <gap:splash src="iPadLoading.png" gap:platform="ios" width="768" height="1004" />
    <gap:splash src="LargeRetinaLandLoading.png" gap:platform="ios" width="2048" height="1496" />
    <gap:splash src="LargeLoading.png" gap:platform="ios" width="1536" height="2008" />
    <gap:plugin name="com.phonegap.plugin.statusbar" />

</widget>
